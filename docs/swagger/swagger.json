                },
                "name": {
                    "type": "string",
                    "example": "John Doe"
                }
            }
        },
        "http.UserResponse": {
            "description": "Estrutura de dados do usuário para respostas",
            "type": "object",
            "properties": {
                "created_at": {
                    "type": "string"
                },
                "email": {
                    "type": "string",
                    "example": "john@example.com"
                },
                "id": {
                    "type": "integer",
                    "example": 1
                },
                "name": {
                    "type": "string",
                    "example": "John Doe"
